<div class="sm:px-[20%] px-[10%] py-6">
 <h1 class="font-bold text-important bg-mainTheme dark:bg-darkTheme text-white py-4 rounded-md text-center">Add a recipe</h1>

</div>
<%= form_with model: [current_user, @recipe], method: :post, local: true, class:"flex flex-col text-lg font-normal gap-5", scope: :recipe do |f| %>
  <div class="sm:px-[20%] px-[10%] ">
  <%= f.label :name %><br>
  <%= f.text_field :name, class: "mt-3 rounded-lg bg-orange-200 dark:text-black border px-2 focus:outline-none w-full py-2 text-xl" %>
  </div>

 <div class="sm:px-[20%] px-[10%]">
  <%= f.label :description %><br>
  <%= f.text_area :description, class: "rounded-lg mt-3 bg-orange-200 border dark:text-black px-2 focus:outline-none w-full py-2 text-xl" %>
  </div>

  <div class="sm:px-[20%] px-[10%]">
  <%= f.label :preparation_time %> in mins<br>
  <%= f.number_field :preparation_time, class: "mt-3 rounded-lg bg-orange-200 border dark:text-black px-2 focus:outline-none w-full py-2 text-xl" %>
  </div>

    <div class="sm:px-[20%] px-[10%]">
  <%= f.label :cooking_time %> in mins<br>
  <%= f.number_field :cooking_time, class: "mt-3 rounded-lg bg-orange-200 border dark:text-black px-2 focus:outline-none w-full py-2 text-xl" %>
  </div>

  <div class="sm:px-[20%] px-[10%]">
    <%= f.label :cooking_time %> in mins<br>
    <%= f.number_field :cooking_time, class: "mt-3 rounded-lg bg-orange-200 border px-2 focus:outline-none w-full py-2 text-xl" %>
  </div>
<div class="sm:px-[20%] px-[10%]">
<%= f.submit "Create Recipe" , class: "rounded-lg py-2 cursor-pointer w-full bg-gradient-to-l from-orange-300 to-pink-300 hover:text-cyan-600 font-bold py-1 hover:from-pink-300 hover:to-orange-300 text-black"%>

</div>


  <% end %>
