 <nav class="bg-mainTheme z-50">
      <div class="logo">
                <%= link_to "Recipes", root_path, class: "" %>
      </div>
      <div class="nav-links">
        <% if user_signed_in? %>
          <div class="user-info hidden sm:block">
            Logged in as <%= current_user.name %>
          </div>
          <%= link_to "Home", root_path, class: "nav-link" %>
          <%= link_to "Food List", user_foods_path(current_user), class: "nav-link" %>
          <%= link_to "Recipe List", user_recipes_path(current_user), class: "nav-link" %>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "nav-link" %>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "logout-btn" %>
        <% else %>
          <%= link_to "Home", root_path, class: "nav-link" %>
          <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        <% end %>
      </div>
    </nav>
