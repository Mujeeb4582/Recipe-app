<div class="sm:px-[20%] px-[10%] py-6">
<h2 class="font-bold text-important bg-mainTheme text-white py-4 rounded-md text-center my-5">Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, :class => "flex flex-col text-lg min-w-[300px] items-center font-normal gap-5" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field py-4 w-full sm:w-[50%]">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "mt-3 rounded-lg dark:text-black border foucs:border focus:dark:shadow-custom focus:dark:border-darkTheme text-black bg-orange-200 border px-2 focus:outline-none w-full py-2 text-xl"  %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: "dark:border-darkTheme dark:hover:shadow-custom actions px-6 inline-flex items-center justify-center py-1 border border-transparent text-xs font-medium rounded-md text-white bg-mainTheme cursor-pointer hover:bg-slate-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>
<% end %>

<div class="flex items-center flex-col">
    <%= render "devise/shared/links" %>
  </div>
</div>
